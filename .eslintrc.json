{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "indent": "off",
        "curly": "off",
        "space-before-function-paren": ["error", "never"],
        "comma-dangle": "off"
    },
    "overrides": [
        {
          "files": ["*.js"]
        }
    ]
}
